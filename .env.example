# ===========================================
# Novels Platform - Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values

# ===========================================
# Database
# ===========================================
DB_HOST=db
DB_PORT=5432
DB_USER=novels
DB_PASSWORD=your_secure_password_here
DB_NAME=novels
DB_SSLMODE=disable

# ===========================================
# Authentication
# ===========================================
# Generate secure secrets with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here_generate_with_openssl
JWT_REFRESH_SECRET=your_refresh_secret_here_generate_with_openssl
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# Application
# ===========================================
APP_ENV=production
APP_PORT=8080

# ===========================================
# URLs
# ===========================================
# API URL (used by frontend to call backend)
NEXT_PUBLIC_API_URL=https://api.novels.example.com

# Site URL (used for SEO, sitemap, OG tags)
NEXT_PUBLIC_SITE_URL=https://novels.example.com

# Base URL for backend (used for sitemap generation)
API_BASE_URL=https://novels.example.com

# CORS allowed origins
CORS_ORIGINS=https://novels.example.com

# ===========================================
# Storage (Optional - for S3-compatible storage)
# ===========================================
# STORAGE_TYPE=s3
# S3_ENDPOINT=
# S3_BUCKET=novels-uploads
# S3_ACCESS_KEY=
# S3_SECRET_KEY=
# S3_REGION=us-east-1

# ===========================================
# Email (Optional - for notifications)
# ===========================================
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM=noreply@novels.example.com

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_RPS=10
RATE_LIMIT_BURST=20

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json

# ===========================================
# Monitoring (Optional)
# ===========================================
# SENTRY_DSN=
# PROMETHEUS_ENABLED=true
